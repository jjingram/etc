PS1=' \w/ '
EDITOR='nvim'
# Go
GOPATH=$HOME/go
PATH=$PATH:$GOPATH/bin:/usr/local/opt/go/libexec/bin
# Cabal
PATH=$PATH:$HOME/.cabal/bin
# TexLive
PATH=$PATH:/usr/local/texlive/2014/bin/x86_64-darwin
export PS1 EDITOR PATH GOPATH

alias c='clear'
alias e='$EDITOR'
alias ls='ls -hGF'
alias l='ls'

# Base16 Shell
BASE16_SHELL="$HOME/etc/color/base16-shell/base16-google.light.sh"
[[ -s $BASE16_SHELL ]] && source $BASE16_SHELL
