EDITOR=vi
PS1='$(echo $PWD | sed "s|$HOME\(.*\)|~\1|" ) '
HISTFILE=$HOME/.sh_history
HISTSIZE=1024
export EDITOR PS1 HISTFILE HISTSIZE PATH

PATH=/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin
# Go.
GOPATH=$HOME/go
PATH=$PATH:$GOPATH/bin:/usr/local/opt/go/libexec/bin
# Haskell.
PATH=$PATH:$HOME/.cabal/bin
export PATH GOPATH

alias ..='cd ..'
alias vi='vim'
alias ls='ls -hF'
alias ll='ls -l'
alias la='ls -a'
alias l='ls'
alias q='exit'
alias c='clear'
alias e="$EDITOR"

set -o ignoreeof
set -o vi-tabcomplete

function cd {
	command cd $1
	ls
}

[ -z $TMUX ] && exec tmux
