#
# ~/.bash_functions
#

# cd and ls in one.
cl() {
  if [[ -d "$1" ]]; then
    cd "$1"
    ls
  elif [[ "$1" = '' ]]; then
    cd $HOME
    ls
  else
    echo "bash: cl: '$1': Directory not found"
  fi
}

# Intercept and display non-zero return codes.
EC() { echo -e '\n\e[1;31m'$?'\e[m'; }
trap EC ERR
